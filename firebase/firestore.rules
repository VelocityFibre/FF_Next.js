rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - DO NOT USE IN PRODUCTION
    // Allows read access without authentication for easier development
    // Write operations still require authentication for safety
    
    // Allow all reads, require auth for writes
    match /{document=**} {
      allow read: if true;  // WARNING: Open read access for development
      allow write: if request.auth != null;
    }
    
    // Projects collection - open read for development
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Project subcollections
      match /phases/{phaseId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
      
      match /steps/{stepId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // Tasks collection (flat structure for querying)
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Phases collection (flat structure for querying)
    match /phases/{phaseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Steps collection (flat structure for querying)
    match /steps/{stepId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Staff collection
    match /staff/{staffId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Clients collection
    match /clients/{clientId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Stock/Materials collection
    match /stock/{stockId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // BOQ collection
    match /boq/{boqId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contractors collection
    match /contractors/{contractorId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // SOW collection
    match /sow/{sowId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // RFQ collection
    match /rfq/{rfqId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Procurement collection
    match /procurement/{procurementId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection (for user profiles)
    match /users/{userId} {
      allow read: if true;  // Open for development
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}